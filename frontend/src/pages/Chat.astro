---
import LayoutChat from "../layouts/Layout_chat.astro";
import { APP_NAME } from "../../global";
---

<LayoutChat title={APP_NAME + " | Chat"}>
  <div class="flex h-screen justify-end">
    <!-- Chat List (Right Panel) -->
    <!-- Chat Window (Main Panel) -->
    <div class="w-full flex flex-col justify-between p-4 bg-gray-100">
      <div class="flex-1 flex flex-col justify-between bg-white rounded-lg shadow">
        <div class="p-4 flex-1 overflow-y-auto w-auto max-w-1/2 lg:max-w-1/2 md:max-w-4/5">
            <!-- Chat Messages -->
            <!-- Mensaje enviado -->
            <div class="flex justify-end mb-2">
                <div class="max-w-xs rounded-lg overflow-hidden shadow-md bg-white text-black">
                    <div class="p-6">
                        <p class="text-sm">
                            Message sent Lorem ipsum dolor sit amet, consectetur adipisicing elit. Alias deleniti facilis hic officiis quasi recusandae!
                        </p>
                    </div>
                </div>
            </div>
    
            <!-- Mensaje recibido -->
            <div class="flex mb-2">
                <div class="max-w-xs rounded-lg overflow-hidden shadow-md bg-green-500 text-white">
                    <div class="p-6">
                        <p class="text-sm">
                            Message received Lorem ipsum dolor sit amet, consectetur adipisicing elit. Alias deleniti facilis hic officiis quasi recusandae!
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="p-4 border-t bg-gray-200 flex items-center justify-between">
            <!-- Chat Input -->
            <input
                type="text"
                id="message-input"
                placeholder="Type a message..."
                class="flex-1 px-3 py-2 rounded border border-gray-300 focus:outline-none focus:border-blue-500"
            />
            <!-- Send Button -->
            <button class="ml-2 px-4 py-2 rounded bg-blue-500 text-white font-semibold hover:bg-blue-600 focus:outline-none focus:bg-blue-600" id="send-button">Send</button>
        </div>
    </div>
    
    </div>

    <div class="w-1/3 p-4 bg-gray-100 border-r text-black">
      <h1 class="text-xl font-bold mb-4">Chats</h1>
      <ul class="space-y-2">
        <!-- Example Chat Item -->
        <li class="p-2 bg-white rounded text-black shadow cursor-pointer hover:bg-gray-200">Chat with User 1</li>
        <li class="p-2 bg-white rounded text-black shadow cursor-pointer hover:bg-gray-200">Chat with User 2</li>
        <li class="p-2 bg-white rounded text-black shadow cursor-pointer hover:bg-gray-200">Chat with User 3</li>
        <!-- Add more chat items dynamically here -->
      </ul>
    </div>
  </div>
  <script src="../controllers/chat/server.js"></script>
</LayoutChat>
