---
import Layout from "../layouts/Layout_registro.astro";
import Container from "../components/Container.astro";
import Header from "../components/Header.astro";
// componentes
import Gradient from "../components/Gradient.astro";
// iconos
import LoginIcon from "../components/icons/LoginIcon.astro";
import RegisterIcon from "../components/icons/RegisterIcon.astro";
import EmailIcon from "../components/icons/EmailIcon.astro";
import EyeIcon from "../components/icons/EyeIcon.astro";
import CloseEyeIcon from "../components/icons/CloseEyeIcon.astro";
import NameIcon from "../components/icons/NameIcon.astro";
import AgeIcon from "../components/icons/AgeIcon.astro";
import { APP_NAME } from "../../global";
const OPTIONS = [
    {
        name: "Iniciar sesion",
        url: "/Login",
        Icon: LoginIcon,
    },
    {
        name: "Registrarse",
        url: "/Register",
        Icon: RegisterIcon,
    },
];
---

<Layout title={APP_NAME + ' | Registrarse'}>
    <main
        class="box-border w-full min-h-screen bg-lime-100 flex flex-col justify-center items-center gap-1"
    >
        <Gradient>
            <section
                class="absolute w-full mx-auto h-screen bg-gradient-to-t via-[#00122D]/70 to-[#00122D]/50 from-[#00122D]"
            >
            </section>
        </Gradient>
        <Header>
            {
                OPTIONS.map(({ name, url, Icon }) => (
                    <>
                        <li class="flex flex-row items-center justify-start lg:justify-center  w-full sm:w-[18vw] md:w-[15vw] xl:w-[10vw] gap-2 text-white hover:text-blue-500">
                            <a
                                href={url}
                                class="flex items-start justify-start py-2 text-white rounded md:bg-transparent md:text-white md:p-0 md:dark:text-blue-500 hover:text-blue-500 w-full hover:bg-white md:hover:bg-transparent"
                            >
                                <Icon class="size-6" />
                                <span class="ml-2">{name}</span>
                            </a>
                        </li>
                    </>
                ))
            }
        </Header>
        <Container
            class="mt-16 max-w-screen flex place-items-center justify-center"
            id="top"
        >
            <form
            id="formularioRegistro"
                class="bg-white/10 border border-slate-100 backdrop-blur-lg p-6 h-[80%] w-full m-2 lg:m-0 lg:w-1/3 lg:h-[70%] rounded-xl flex flex-col items-center justify-center"
            >
                <h2 class="text-2xl font-bold mb-4">Registrarse</h2>
                <div class="relative mb-4 w-5/6">
                    <input
                        type="text"
                        name="nombre"
                        placeholder="Nombre"
                        class="bg-transparent border rounded-3xl border-gray-300 py-2 px-4 w-full focus:outline-none focus:border-blue-500"
                    />
                    <div
                        class="absolute inset-y-0 right-0 flex items-center px-2"
                    >
                        <!-- Icono para el campo de correo electrónico -->
                        <NameIcon class="size-6 text-sm" />
                    </div>
                </div>
                <div class="flex mb-4 gap-4 w-5/6">
                    <!-- Campo de entrada para el apellido -->
                    <div class="relative flex-1 min-w-[70%]">
                        <input
                            type="text"
                        name="apellido"
                        placeholder="Apellido"
                            class="bg-transparent border rounded-3xl border-gray-300 py-2 px-4 w-full focus:outline-none focus:border-blue-500"
                        />
                        <div
                            class="absolute inset-y-0 right-0 flex items-center px-2"
                        >
                            <!-- Icono para el campo de apellido -->
                            <NameIcon class="size-6 text-sm" />
                        </div>
                    </div>

                    <!-- Campo de entrada para la edad -->
                    <div class="relative flex-1 w-[25%]">
                        <input
                            type="number"
                        name="edad"
                        placeholder="Edad"
                            class="bg-transparent border rounded-3xl border-gray-300 py-2 px-4 w-full focus:outline-none focus:border-blue-500"
                        />
                        <div
                            class="absolute inset-y-0 right-0 flex items-center px-2"
                        >
                            <!-- Icono para el campo de edad -->
                            <AgeIcon class="size-6 text-sm" />
                        </div>
                    </div>
                </div>

                <div class="relative mb-4 w-5/6">
                    <input
                        type="email"
                        placeholder="Correo electrónico"
                        name="correo"
                        class="bg-transparent border rounded-3xl border-gray-300 py-2 px-4 w-full focus:outline-none focus:border-blue-500"
                    />
                    <div
                        class="absolute inset-y-0 right-0 flex items-center px-2"
                    >
                        <!-- Icono para el campo de correo electrónico -->
                        <EmailIcon class="size-6 text-sm" />
                    </div>
                </div>
                <div class="relative mb-6 w-5/6">
                    <input
                        type="password"
                        name="password"
                        placeholder="Contraseña"
                        class="bg-transparent border rounded-3xl border-gray-300 py-2 px-4 w-full focus:outline-none focus:border-blue-500"
                        id="passwordInput"
                    />
                    <button
                        type="button"
                        class="absolute inset-y-0 right-0 flex items-center px-2 cursor-pointer"
                        id="togglePasswordVisibility"
                    >
                        <!-- Icono para cambiar la visibilidad de la contraseña -->
                        <EyeIcon class="size-6 text-sm" id="eyeIcon" />
                        <CloseEyeIcon
                            class="hidden size-6 text-sm"
                            id="closeEyeIcon"
                        />
                    </button>
                </div>

                <button
                    class="bg-[#95DF89] text-white py-2 px-4 font-bold hover:bg-white hover:text-green-700 transition-colors w-5/6 rounded-3xl"
                    >Enviar</button
                >
                <div class="w-5/6">
                    <p class="text-white text-sm p-2">
                        Si ya tienes un cuenta creada <a
                            href="/Login"
                            class="underline">Ingresa aqui</a
                        >
                    </p>
                </div>
            </form>
        </Container>
    </main>
    <script
        src="https://cdn.jsdelivr.net/npm/bcryptjs@2.4.3/dist/bcrypt.min.js"
        integrity="sha256-r9S9KZvN5nEN1voCkVbj4RdMSLwAa4qeujL5ZOWSN4M="
        crossorigin="anonymous"></script>
    <script src="../controllers/login/showPassword.js"></script>
    <script src="../controllers/register/registerUser.js"></script>
</Layout>
